<h1>Sign in</h1>
<%= form_with url: sign_in_path do |form| %>
<div class="mb-3">
    <%= form.label :email %>
  <%= form.text_field :email, class: "form-control", placeholder: "xxx@qq.com" %>
 </div>

 <div class="mb-3">
    <%= form.label :password %>
 <%= form.text_field :password, class: "form-control", placeholder: "password" %>
 <%= link_to "Forgot your password?", password_reset_path %>
</div>
<div class="mb-3">
    <%= form.submit "Sign up", class: "btn btn-primary" %>
</div>

<% end %>